@model List<Product>
@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    @if (Model != null)
    {
        @foreach (var product in Model)
        {
            <div class="col-3 mb-3">
                <div class="card shadow">
                    <div class="card-body text-center">
                        <a class="text-success" asp-controller="product" asp-action="index" asp-route-Id="@product.Id">
                            <h5>@product.Name</h5>
                        </a>
                        <h2 class="text-danger">@product.Price.ToString("c")</h2>
                        <a class="btn btn-outline-secondary mt-3"
                           asp-controller="Favorite"
                           asp-action="Add"
                           asp-route-productId="@product.Id">
                            Добавить в избранное
                        </a>
                        <a class="btn btn-success" asp-controller="cart" asp-action="add" asp-route-productId="@product.Id">Добавить в корзину</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <h2>Нет товаров для отображения!</h2>
    }
</div>